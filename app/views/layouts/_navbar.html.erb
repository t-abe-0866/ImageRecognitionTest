        <li class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium"><%= link_to 'ユーザー登録', signup_path%></li>
        <li class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium"><%= link_to 'ログイン', login_path%></li>
      </div>
    </div>
  </nav>
<% end %>
